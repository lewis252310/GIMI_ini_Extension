      {
        "label": "compile_tmLanguage_py",
        "type": "shell",
        "command": "python",
        "args": [
          "${workspaceFolder}/building_tools/convertYamlJson.py",
          "y2j",
          "--input_file",
          "${workspaceFolder}/gimi-ini_extension/syntaxes/gimi_ini.tmLanguage_v0.1.7-B.yaml",
